def crear_mes(nombre, abrev, dias):
    """a: imprime la info del mes que se pasa por los parametros, b: formatea antes de imprimir"""
    #print(f"Se creó el mes de {nombre}, que se abrevia {abrev} y tiene {dias} días.")  # a

    mes = "Se creó el mes de {0}, que se abrevia {1} y tiene {2} días."  # b
    cadena = mes.format(nombre, abrev, str(dias))
    print(cadena)
